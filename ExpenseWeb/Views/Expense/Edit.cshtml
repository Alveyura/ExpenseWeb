@model ExpenseWeb.Models.ExpenseCreateModel

<form asp-controller="Expense" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input class="form-control" asp-for="Date" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span class="text-danger" asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input class="form-control" asp-for="Amount" />
        <span class="text-danger" asp-validation-for="Amount"></span>
    </div>
    <button class="btn btn-primary" type="submit">Uitgave Toevoegen</button>
</form>
